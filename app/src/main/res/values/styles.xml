<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_height">@dimen/header_linear_layout_height</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>


    <style name="HeaderTextView">
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">@dimen/header_textSize</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:layout_marginBottom">@dimen/button_marginBottom</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/main_activity_button_icon_text</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/main_activity_button_icon_text</item>

    </style>

    <style name="StringTextStyle">
        <item name="android:textSize">@dimen/string_screen_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:layout_marginStart">@dimen/string_text_margin_start</item>
        <item name="android:layout_marginVertical">@dimen/string_text_margin_vertical</item>
    </style>

    <style name="StringIconStyle">
        <item name="android:layout_width">@dimen/string_screen_icon_layout_width</item>
        <item name="android:layout_height">@dimen/string_screen_icon_layout_height</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginEnd">@dimen/string_icon_margin_end</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="tint">@color/icon_tint</item>
    </style>

    <style name="LinearEditArea">

        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="EditArea">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_area_text_color</item>
        <item name="android:textColorHint">@color/edit_area_hint_color</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/edit_area_icon_color</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="ClearButton">
        <item name="android:src">@drawable/clear</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="rvCover">
        <item name="android:layout_width">@dimen/img_track_width</item>
        <item name="android:layout_height">@dimen/img_track_height</item>

        <item name="android:layout_marginStart">@dimen/img_track_layout_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/img_track_layout_margin_end</item>
    </style>

    <style name="rvName">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="paddingStart">1dp</item>
        <item name="android:textColor">@color/track_name_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="rvDetails">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/artist_name_separator_time_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="PlaceholderText">
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/placeholderText</item>
        <item name="android:textSize">19sp</item>

    </style>

    <style name="ActionButton">
        <item name="android:backgroundTint">@color/action_button</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/action_button_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchHistoryHeader">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/search_history_header</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="PlayerTrackName">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/player_track_artist_name_and_time</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerArtistName">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/player_track_artist_name_and_time</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerTime">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/player_track_artist_name_and_time</item>
        <item name="android:textSize">13sp</item>


    </style>

    <style name="PlayerTrackInfo">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/player_info</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginStart">16dp</item>

    </style>

    <style name="PlayerTrackInfoData">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/player_info_data</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="TabText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Tab">
        <item name="tabTextColor">@color/tab_text</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabBackground">@color/main_background</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
    </style>

    <style name="ActionButton2">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="EditTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">3.5dp</item>
        <item name="boxCornerRadiusBottomStart">3.5dp</item>
        <item name="boxCornerRadiusTopEnd">3.5dp</item>
        <item name="boxCornerRadiusTopStart">3.5dp</item>
        <item name="hintTextColor">@color/box_stroke_color</item>
        <item name="cursorColor">@color/cursor_and_progressBar</item>
        <item name="android:textColorHint">@color/main_text</item>
        <item name="endIconDrawable">@drawable/clear</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="EditTextHint">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="boxStrokeColor">@color/box_stroke_color</item>
    </style>

    <style name="CustomShapeImage" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Playlist_rv_item">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="Rounded_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="HeaderBottomSheet">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="PlaylistInternalName">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/playlist_internals_text_color</item>
    </style>

    <style name="PlaylistInternalData">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/playlist_internals_text_color</item>
    </style>

</resources>