<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_height">@dimen/header_linear_layout_height</item>
        <item name="android:padding">@dimen/header_linear_layout_padding</item>

    </style>

    <style name="HeaderImageView">
        <item name="android:layout_width">@dimen/header_image_view_layout_width</item>
        <item name="android:layout_height">@dimen/header_image_view_layout_height</item>
        <item name="android:padding">@dimen/header_image_view_padding</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">@dimen/header_textSize</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:layout_marginBottom">@dimen/button_marginBottom</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/main_activity_button_icon_text</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/main_activity_button_icon_text</item>

    </style>

    <style name="StringTextStyle">
        <item name="android:textSize">@dimen/string_screen_textSize</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:layout_marginStart">@dimen/string_text_margin_start</item>
        <item name="android:layout_marginVertical">@dimen/string_text_margin_vertical</item>
    </style>

    <style name="StringIconStyle">
        <item name="android:layout_width">@dimen/string_screen_icon_layout_width</item>
        <item name="android:layout_height">@dimen/string_screen_icon_layout_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/string_icon_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/string_icon_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/string_icon_margin_bottom</item>
        <item name="tint">@color/icon_tint</item>
    </style>

    <style name="LinearEditArea">

        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="EditArea">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_area_text_color</item>
        <item name="android:textColorHint">@color/edit_area_hint_color</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/edit_area_icon_color</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="ClearButton">
        <item name="android:src">@drawable/clear</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ImgTrack">
        <item name="android:layout_width">@dimen/img_track_width</item>
        <item name="android:layout_height">@dimen/img_track_height</item>
        <item name="android:layout_marginVertical">@dimen/img_track_layout_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/img_track_layout_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/img_track_layout_margin_end</item>
    </style>

    <style name="TrackName">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="paddingStart">1dp</item>
        <item name="android:textColor">@color/track_name_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistNameAndTrackTime">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/artist_name_separator_time_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="PlaceholderText">
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/placeholderText</item>
        <item name="android:textSize">19sp</item>

    </style>

    <style name="ActionButton">
        <item name="android:backgroundTint">@color/action_button</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchHistoryHeader">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/search_history_header</item>
        <item name="android:textSize">19sp</item>
    </style>


</resources>